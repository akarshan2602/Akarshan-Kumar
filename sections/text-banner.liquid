<div class="text-banner">
      <p>{{ section.settings.text_banner_heading }}</p>      
</div>

<style>
  .text-banner{
    background-color:#F5F5F5;
    padding: 10px;
  }
  .text-banner p{
    font-family: 'Jost', sans-serif; /* Ensure to include a fallback font */
  font-size: 16px;                 /* Font size */
  font-weight: 400;                /* Normal font weight */
  line-height: 13.42px;           /* Line height */
  text-align: center;              
  }
</style>


{% schema %}
  {
    "name": "Text Announcement Banner",
    "settings": [
      {
        "type": "text",
        "id": "text_banner_heading",
        "label": "Announcement Banner Heading",
        "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
      },
    ]
  }
  
{% endschema %}